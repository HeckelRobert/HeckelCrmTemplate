@using Microsoft.Extensions.Options
@inject IOptions<HeckelCrm.Api.Options.ExternalLinksOptions> ExternalLinksOptions
@{
    var externalLinks = ExternalLinksOptions.Value;
}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Heckel CRM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Heckel_CRM.png" alt="Heckel CRM" style="height: 90px; width: auto;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="LeadsUi" asp-action="Index">
                                <i class="bi bi-people"></i> Leads
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AngeboteUi" asp-action="Index">
                                <i class="bi bi-file-earmark-text"></i> Angebote
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid mt-4">
        <main role="main">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container-fluid text-center">
            <span class="text-muted">&copy; @DateTime.Now.Year Heckel CRM. Alle Rechte vorbehalten.</span>
            <div class="mt-2">
                @{
                    var links = new List<(string Url, string Text)>();
                    if (!string.IsNullOrEmpty(externalLinks.PrivacyPolicyUrl))
                        links.Add((externalLinks.PrivacyPolicyUrl, "Datenschutzerkl√§rung"));
                    if (!string.IsNullOrEmpty(externalLinks.TermsUrl))
                        links.Add((externalLinks.TermsUrl, "AGB"));
                    if (!string.IsNullOrEmpty(externalLinks.ImprintUrl))
                        links.Add((externalLinks.ImprintUrl, "Impressum"));
                }
                @for (int i = 0; i < links.Count; i++)
                {
                    <a href="@links[i].Url" target="_blank" class="text-muted text-decoration-none @(i > 0 ? "ms-3" : "me-3")">@links[i].Text</a>
                    @if (i < links.Count - 1)
                    {
                        <span class="text-muted">|</span>
                    }
                }
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

