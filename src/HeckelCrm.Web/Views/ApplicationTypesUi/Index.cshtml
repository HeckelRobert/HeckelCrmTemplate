@model IEnumerable<ApplicationTypeDto>
@{
    ViewData["Title"] = "Anwendungstypen verwalten";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1>
                <i class="bi bi-tags"></i> Anwendungstypen verwalten
            </h1>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Neuer Anwendungstyp
            </a>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Beschreibung</th>
                        <th>Erstellt am</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var applicationType in Model)
                    {
                        <tr>
                            <td>@applicationType.Name</td>
                            <td>@(applicationType.Description ?? "-")</td>
                            <td>@applicationType.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@applicationType.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Bearbeiten
                                </a>
                                <form asp-action="Delete" asp-route-id="@applicationType.Id" method="post" class="d-inline" onsubmit="return confirm('Möchten Sie diesen Anwendungstyp wirklich löschen?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Löschen
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Noch keine Anwendungstypen vorhanden. 
        <a asp-action="Create">Erstellen Sie den ersten Anwendungstyp.</a>
    </div>
}

