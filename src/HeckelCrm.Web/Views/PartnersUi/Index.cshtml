@model IEnumerable<PartnerDto>
@{
    ViewData["Title"] = "Partner verwalten";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-people-fill"></i> Partner verwalten
        </h2>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage as string))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Partner-ID</th>
                                <th>Name</th>
                                <th>E-Mail</th>
                                <th>Status</th>
                                <th>Erstellt am</th>
                                <th>Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var partner in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@partner.PartnerId</strong>
                                    </td>
                                    <td>@partner.Name</td>
                                    <td>@partner.Email</td>
                                    <td>
                                        @if (partner.IsActive)
                                        {
                                            <span class="badge bg-success">Aktiv</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inaktiv</span>
                                        }
                                    </td>
                                    <td>@partner.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <a asp-controller="ContactsUi" asp-action="Index" asp-route-partnerId="@partner.PartnerId" class="btn btn-sm btn-outline-primary" title="Contacts anzeigen">
                                            <i class="bi bi-people"></i> Leads
                                        </a>
                                        <a asp-controller="OffersUi" asp-action="Index" asp-route-partnerId="@partner.PartnerId" class="btn btn-sm btn-outline-info" title="Angebote anzeigen">
                                            <i class="bi bi-file-earmark-text"></i> Angebote
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editPartnerModal_@partner.Id" title="Partner bearbeiten">
                                            <i class="bi bi-pencil"></i> Bearbeiten
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        @foreach (var partner in Model)
        {
            <!-- Edit Partner Modal -->
            <div class="modal fade" id="editPartnerModal_@partner.Id" tabindex="-1" aria-labelledby="editPartnerModalLabel_@partner.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form asp-controller="PartnersUi" asp-action="Update" asp-route-partnerId="@partner.PartnerId" method="post">
                            @Html.AntiForgeryToken()
                            <div class="modal-header">
                                <h5 class="modal-title" id="editPartnerModalLabel_@partner.Id">Partner bearbeiten</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="newPartnerId_@partner.Id" class="form-label">Partner-ID *</label>
                                    <input type="text" class="form-control" id="newPartnerId_@partner.Id" name="newPartnerId" value="@partner.PartnerId" required pattern="[A-Za-z0-9-_]+" />
                                    <small class="form-text text-muted">Nur Buchstaben, Zahlen, Bindestriche und Unterstriche erlaubt.</small>
                                </div>
                                <div class="mb-3">
                                    <label for="name_@partner.Id" class="form-label">Name *</label>
                                    <input type="text" class="form-control" id="name_@partner.Id" name="name" value="@partner.Name" required />
                                </div>
                                <div class="mb-3">
                                    <label for="email_@partner.Id" class="form-label">E-Mail *</label>
                                    <input type="email" class="form-control" id="email_@partner.Id" name="email" value="@partner.Email" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abbrechen</button>
                                <button type="submit" class="btn btn-primary">Speichern</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }

        <div class="mt-3">
            <p class="text-muted">
                <i class="bi bi-info-circle"></i> Gesamt: <strong>@Model.Count()</strong> Partner
            </p>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Keine Partner gefunden.
        </div>
    }
</div>
