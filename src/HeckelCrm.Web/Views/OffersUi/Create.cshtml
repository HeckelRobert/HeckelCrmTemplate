@using HeckelCrm.Web.Controllers
@model CreateOfferViewModel
@{
    ViewData["Title"] = "Angebot erstellen";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <h1>
                <i class="bi bi-file-earmark-plus"></i> Angebot erstellen
            </h1>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Zurück zur Übersicht
            </a>
        </div>
    </div>
</div>

<form asp-action="Create" method="post" id="createOfferForm">
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Grundinformationen</h5>
                </div>
                <div class="card-body">
                    @if (!Model.ContactId.HasValue)
                    {
                        <div class="mb-3">
                            <label asp-for="ContactId" class="form-label">Kontakt *</label>
                            <select asp-for="ContactId" class="form-select" required id="contactSelect">
                                <option value="">Bitte wählen</option>
                                @foreach (var contact in Model.Contacts)
                                {
                                    <option value="@contact.Id">@contact.FirstName @contact.LastName (@contact.Email)</option>
                                }
                            </select>
                            <span asp-validation-for="ContactId" class="text-danger"></span>
                        </div>
                    }
                    else
                    {
                        <input type="hidden" asp-for="ContactId" />
                        <div class="mb-3">
                            <label class="form-label">Kontakt</label>
                            <p class="form-control-plaintext">@Model.ContactName (@Model.ContactEmail)</p>
                        </div>
                    }

                    <div class="mb-3">
                        <label asp-for="ApplicationTypeId" class="form-label">Anwendungstyp</label>
                        <select asp-for="ApplicationTypeId" class="form-select">
                            <option value="">Bitte wählen</option>
                            @foreach (var applicationType in Model.ApplicationTypes)
                            {
                                <option value="@applicationType.Id">@applicationType.Name</option>
                            }
                        </select>
                        <small class="form-text text-muted">Der Titel wird automatisch als "{Anwendungstyp} - {Name der ersten Leistung}" generiert.</small>
                        <span asp-validation-for="ApplicationTypeId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SelectedQuoteRequestIds" class="form-label">Anfragen *</label>
                        <select asp-for="SelectedQuoteRequestIds" class="form-select" multiple required id="quoteRequestsSelect" size="5">
                            @foreach (var request in Model.QuoteRequests)
                            {
                                <option value="@request.Id">@request.ContactName - @(string.IsNullOrEmpty(request.Requirements) ? "Keine Anforderungen" : (request.Requirements.Length > 50 ? request.Requirements.Substring(0, 50) + "..." : request.Requirements)) (@request.Status)</option>
                            }
                        </select>
                        <small class="form-text text-muted">Halten Sie Strg gedrückt, um mehrere Anfragen auszuwählen.</small>
                        <span asp-validation-for="SelectedQuoteRequestIds" class="text-danger"></span>
                    </div>

                    @* Title and description are auto-generated; keep values hidden *@
                    <input asp-for="Title" type="hidden" />
                    <input asp-for="Description" type="hidden" />

                    @* Currency and ValidUntil are handled by Lexware defaults; no manual input required *@
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> Positionen</h5>
                </div>
                <div class="card-body">
                    <div id="lineItemsContainer">
                        @if (Model.LineItems != null && Model.LineItems.Any())
                        {
                            @for (int i = 0; i < Model.LineItems.Count; i++)
                            {
                                <div class="line-item mb-3 p-3 border rounded">
                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <label class="form-label">Artikel *</label>
                                            <select name="LineItems[@i].ArticleId" class="form-select article-select" required>
                                                @foreach (var article in Model.Articles)
                                                {
                                                    <option value="@article.Id"
                                                            data-name="@article.Name"
                                                            data-description="@article.Description"
                                                            data-price="@article.UnitPrice"
                                                            data-unit="@article.UnitName"
                                                            data-tax="@article.TaxRatePercentage">
                                                        @article.Name
                                                    </option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-6 mb-2 d-none">
                                            <label class="form-label">Name *</label>
                                            <input name="LineItems[@i].Name" class="form-control" type="hidden" />
                                        </div>
                                    </div>
                                    <div class="row d-none">
                                        <div class="col-md-12 mb-2">
                                            <label class="form-label">Beschreibung</label>
                                            <textarea name="LineItems[@i].Description" class="form-control" rows="2"></textarea>
                                        </div>
                                    </div>
                                    <div class="row">
                                    <div class="col-md-3 mb-2">
                                        <label class="form-label">Menge (Tage)</label>
                                        <input name="LineItems[@i].Quantity" type="number" step="0.01" class="form-control" value="1" />
                                    </div>
                                    <div class="col-md-3 mb-2 d-none">
                                        <label class="form-label">Einzelpreis *</label>
                                        <input name="LineItems[@i].UnitPrice" type="number" step="0.01" class="form-control" />
                                    </div>
                                    <div class="col-md-3 mb-2 d-none">
                                        <label class="form-label">MwSt. %</label>
                                        <input name="LineItems[@i].TaxRatePercentage" type="number" class="form-control" value="19" />
                                    </div>
                                    </div>
                                    <div class="row">
                                    <div class="col-md-6 mb-2 d-flex align-items-end">
                                            <button type="button" class="btn btn-danger btn-sm remove-line-item">Entfernen</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="line-item mb-3 p-3 border rounded">
                                <div class="row">
                                    <div class="col-md-6 mb-2">
                                        <label class="form-label">Artikel *</label>
                                        <select name="LineItems[0].ArticleId" class="form-select article-select" required>
                                            @foreach (var article in Model.Articles)
                                            {
                                                <option value="@article.Id"
                                                        data-name="@article.Name"
                                                        data-description="@article.Description"
                                                        data-price="@article.UnitPrice"
                                                        data-unit="@article.UnitName"
                                                        data-tax="@article.TaxRatePercentage">
                                                    @article.Name
                                                </option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-6 mb-2 d-none">
                                        <label class="form-label">Name *</label>
                                        <input name="LineItems[0].Name" class="form-control" type="hidden" />
                                    </div>
                                </div>
                                <div class="row d-none">
                                    <div class="col-md-12 mb-2">
                                        <label class="form-label">Beschreibung</label>
                                        <textarea name="LineItems[0].Description" class="form-control" rows="2"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 mb-2">
                                        <label class="form-label">Menge (Tage)</label>
                                        <input name="LineItems[0].Quantity" type="number" step="0.01" class="form-control" value="1" />
                                    </div>
                                    <div class="col-md-3 mb-2 d-none">
                                        <label class="form-label">Einzelpreis *</label>
                                        <input name="LineItems[0].UnitPrice" type="number" step="0.01" class="form-control" />
                                    </div>
                                    <div class="col-md-3 mb-2 d-none">
                                        <label class="form-label">MwSt. %</label>
                                        <input name="LineItems[0].TaxRatePercentage" type="number" class="form-control" value="19" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-2 d-flex align-items-end">
                                        <button type="button" class="btn btn-danger btn-sm remove-line-item">Entfernen</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <button type="button" class="btn btn-outline-primary" id="addLineItem">
                        <i class="bi bi-plus-circle"></i> Position hinzufügen
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Hinweise</h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li>Der Kontakt muss in Lexoffice angelegt sein</li>
                        <li>Sie können eine oder mehrere Anfragen auswählen</li>
                        <li>Artikel können aus Lexoffice geladen werden</li>
                        <li>Das Angebot wird direkt in Lexoffice erstellt</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-check-circle"></i> Angebot erstellen
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="bi bi-x-circle"></i> Abbrechen
            </a>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        let lineItemIndex = @(Model.LineItems?.Count ?? 1);

        document.getElementById('addLineItem').addEventListener('click', function() {
            const container = document.getElementById('lineItemsContainer');
            const template = container.querySelector('.line-item').cloneNode(true);
            
            // Update indices
            const inputs = template.querySelectorAll('[name]');
            inputs.forEach(input => {
                const name = input.getAttribute('name');
                if (name) {
                    input.setAttribute('name', name.replace(/\[\d+\]/, `[${lineItemIndex}]`));
                }
            });
            
            // Clear values
            template.querySelectorAll('input[type=\"text\"], input[type=\"number\"], textarea, select').forEach(el => {
                if (el.type !== 'hidden') {
                    el.value = el.tagName === 'SELECT'
                        ? ''
                        : (el.type === 'number' && el.name.includes('Quantity')
                            ? '1'
                            : (el.name.includes('UnitName')
                                ? 'Tage'
                                : (el.name.includes('TaxRatePercentage')
                                    ? '19'
                                    : '')));
                }
            });
            
            container.appendChild(template);
            lineItemIndex++;
            
            // Reattach event listeners
            attachLineItemListeners(template);
        });

        function attachLineItemListeners(item) {
            // Article select change
            const articleSelect = item.querySelector('.article-select');
            if (articleSelect) {
                const applyArticleData = function(selectElement) {
                    const option = selectElement.options[selectElement.selectedIndex];
                    if (option && option.value) {
                        const row = item.closest('.line-item');
                        const nameInput = row.querySelector('input[name*=".Name"]');
                        const priceInput = row.querySelector('input[name*=".UnitPrice"]');
                        const unitInput = row.querySelector('input[name*=".UnitName"]');
                        const taxInput = row.querySelector('input[name*=".TaxRatePercentage"]');
                        const descriptionTextarea = row.querySelector('textarea[name*=".Description"]');

                        if (nameInput) nameInput.value = option.dataset.name || option.text || '';
                        if (priceInput) priceInput.value = option.dataset.price || priceInput.value || '';
                        if (unitInput) unitInput.value = option.dataset.unit || unitInput.value || 'Tage';
                        if (taxInput) taxInput.value = option.dataset.tax || taxInput.value || '19';
                        if (descriptionTextarea && !descriptionTextarea.value) {
                            descriptionTextarea.value = option.dataset.description || '';
                        }
                    }
                };

                // Apply once on initial load so Name nie leer bleibt
                if (articleSelect.value) {
                    applyArticleData(articleSelect);
                }

                articleSelect.addEventListener('change', function() {
                    applyArticleData(this);
                });
            }

            // Remove button
            const removeBtn = item.querySelector('.remove-line-item');
            if (removeBtn) {
                removeBtn.addEventListener('click', function() {
                    if (document.querySelectorAll('.line-item').length > 1) {
                        item.remove();
                    } else {
                        alert('Mindestens eine Position ist erforderlich.');
                    }
                });
            }
        }

        // Attach listeners to existing items
        document.querySelectorAll('.line-item').forEach(item => {
            attachLineItemListeners(item);
        });

        // Contact select change - load quote requests
        const contactSelect = document.getElementById('contactSelect');
        if (contactSelect) {
            contactSelect.addEventListener('change', function() {
                const contactId = this.value;
                if (contactId) {
                    window.location.href = '@Url.Action("Create", "OffersUi")?contactId=' + contactId;
                }
            });
        }
    </script>
}

